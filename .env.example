# Environment Variables Template
# Copy this file to .env.local for local development
# Copy this file to .env.production for production builds

# Base URL for the application (used for routing)
VITE_BASE_URL=/

# API endpoint (if needed for future backend integration)
# VITE_API_URL=https://api.example.com

# Enable/disable analytics (if implemented)
# VITE_ENABLE_ANALYTICS=false

# Content paths (relative to public directory)
VITE_ARTICLES_PATH=/מאמרים
VITE_EXHIBITIONS_PATH=/תמונות
VITE_STUDENT_ART_PATH=/ציורים בהנחייתי

# Default language
VITE_DEFAULT_LANGUAGE=he

# Image optimization settings
VITE_IMAGE_QUALITY=85
VITE_THUMBNAIL_SIZE=400
